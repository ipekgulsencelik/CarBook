@model Price

@{
    ViewData["Title"] = "CreatePrice";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Araç Ödeme Planı Girişi</h1>
<br />
<form method="post">
    <label>Araç</label>
    @Html.DropDownListFor(x=>x.CarID,(List<SelectListItem>)ViewBag.cars,new{@class="form-control",style="border:1px solid #000000"})
    <br />
    <label>Ödeme Planı Giriniz</label>
    <input type="text" asp-for="PriceType" class="form-control" style="border:1px solid #000000" />
    <br />
    <label>Tutarı Giriniz</label>
    <input type="text" asp-for="PriceValue" class="form-control" style="border:1px solid #000000" />
    <br />
    <button class="btn btn-primary">Ödeme Planını Ekle</button>
</form>