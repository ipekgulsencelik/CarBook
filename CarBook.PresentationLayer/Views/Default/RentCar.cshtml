@model RentCarViewModel

<div class="ftco-blocks-cover-1">
    <div class="ftco-cover-1 overlay" style="background-image: url('/carbook-master/images/hero_1.jpg')">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-5">
                    <div class="feature-car-rent-box-1">
                        <h3>Araç Kirala</h3>
                        <form asp-action="RentCar" asp-controller="Default" class="request-form ftco-animate" method="post">
                            <span>Marka</span>
                            @Html.DropDownListFor(x=>x.Brand,(List<SelectListItem>)ViewBag.brands, "Marka Seçiniz", new{@class="form-control", required = "required", value= "ViewData['brand']" })
                            <hr />
                            <span>Yakıt Türü</span>
                            @Html.DropDownListFor(x => x.GasType, (IEnumerable<SelectListItem>)ViewBag.gasTypes, "Yakıt Türü Seçiniz", new { @class = "form-control", required = "required", value = "ViewData['gasType']" })
                            <hr />
                            <span>Vites</span>
                            @Html.DropDownListFor(x=>x.Transmission,(List<SelectListItem>)ViewBag.transmissions,"Vites Türü Seçiniz", new{@class="form-control", required = "required", value= "ViewData['transmission']" })
                            <hr />
                            <div class="d-flex align-items-center bg-light p-3">
                                <span>Yıl</span>
                                <input type="text" class="form-control bg-light" asp-for="Year" value="@ViewData["year"]" placeholder="2019, 2020, 2021..." required>
                            </div>
                            <div class="d-flex align-items-center p-3">
                                <input type="submit" class="ml-auto btn btn-primary" value="Hemen Kirala" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>